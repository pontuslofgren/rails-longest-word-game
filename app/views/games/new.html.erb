<div class="container">

  <h1>New game</h1>

  <ul class="letters clearfix">
    <% @letters.each do |letter| %>
      <li class="letter"><%= letter %></li>
    <% end %>
  </ul>


  <div class="mt-3">
    <form action="/score" method="POST" data-turbo="false" id="game">
      <label for="answer" class="form-label">What is the longest word you can find?</label>
      <div class="input-group mb-3">
        <input type="text" name="word" id="answer" class="form-control" placeholder="A valid word" aria-label="Enter your answer" aria-describedby="play">
        <button class="btn btn-outline-secondary" type="submit" id="play">Play</button>
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>

</div>
